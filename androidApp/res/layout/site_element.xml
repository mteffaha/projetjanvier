<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:weightSum="100" android:orientation="horizontal"
            >

        <TextView android:id="@+id/siteid"
                  android:text="0"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center"
                  android:textAlignment="center"
                  android:layout_margin="5dp"
                  android:layout_weight="20"/>
        <TextView android:id="@+id/siteTitle"
                  android:text="Site 0"
                  android:layout_margin="5dp"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center"
                  android:layout_weight="60"/>
        <TextView android:layout_height="0dp" android:layout_width="0dp" android:id="@+id/sitedescription" />

    </LinearLayout>

</LinearLayout>